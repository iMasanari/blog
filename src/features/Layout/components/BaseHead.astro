---
export interface Props {
  title: string
  description: string
  ogpImage?: string
  noindex?: boolean
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)

const defaultOgpImage = '/images/icon.jpg'
const { title, description, ogpImage = defaultOgpImage, noindex } = Astro.props
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
<link rel="canonical" href={canonicalURL} />
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(ogpImage, Astro.url)} />
<meta
  property="twitter:card"
  content={ogpImage == defaultOgpImage ? 'summary' : 'summary_large_image'}
/>
{noindex && <meta name="robots" content="noindex">}