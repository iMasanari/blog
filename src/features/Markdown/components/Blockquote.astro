---
import type { HTMLAttributes } from 'astro/types'
import { mergeStyle } from 'molcss'
import * as styles from './Blockquote.styles'

type Props = HTMLAttributes<'blockquote'>

const props = {
  ...Astro.props,
  class: mergeStyle(styles.blockquote, Astro.props.class),
}
---

<blockquote {...props}>
  <slot />
</blockquote>
