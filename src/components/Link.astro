---
import type { HTMLAttributes } from 'astro/types'
import { mergeStyle } from 'molcss'
import * as styles from './Link.styles'

interface Props extends HTMLAttributes<'a'> {}

const props = {
  ...Astro.props,
  class: mergeStyle(styles.link, Astro.props.class),
}
---

<a {...props}><slot /></a>
