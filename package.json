{
  "name": "tech-sandbox",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "predev": "npm run build:routes",
    "dev": "npm run dev:routes & npm run dev:parcel",
    "dev:routes": "chokidar \"content/**/*.md\" -c \"npm run build:routes\"",
    "dev:parcel": "parcel src/index.html",
    "prebuild": "npm run clean && npm run build:copy",
    "build": "npm run build:routes && npm run build:parcel && npm run build:html",
    "build:copy": "cp -r ./public/* ./dist",
    "build:routes": "ts-node -P tsconfig.ts-node.json --require ignore-styles scripts/build-routes.js",
    "build:parcel": "parcel build src/index.html --experimental-scope-hoisting",
    "build:html": "ts-node -P tsconfig.ts-node.json --require ignore-styles scripts/build-html.js",
    "test": "npm run test:textlint && npm run test:tsc",
    "test:textlint": "textlint ./content",
    "test:tsc": "tsc -p . --noEmit",
    "clean": "rm -r dist/* build-cache/*",
    "gh-pages": "gh-pages -d dist -b master",
    "deploy": "npm run build && npm run gh-pages"
  },
  "dependencies": {
    "hyperapp": "^1.2.9"
  },
  "devDependencies": {
    "@hyperapp/render": "^2.1.0",
    "@types/cheerio": "^0.22.10",
    "@types/html-minifier": "^3.5.2",
    "@types/marked": "^0.5.0",
    "@types/mkdirp": "^0.5.2",
    "@types/prismjs": "^1.9.0",
    "cheerio": "^1.0.0-rc.2",
    "chokidar-cli": "^1.2.1",
    "critical": "^1.3.4",
    "gh-pages": "^2.0.1",
    "html-minifier": "^3.5.21",
    "ignore-styles": "^5.0.1",
    "jdown": "^0.6.6",
    "marked": "^0.5.2",
    "mkdirp": "^0.5.1",
    "parcel-bundler": "^1.11.0",
    "prismjs": "^1.15.0",
    "textlint": "^11.0.1",
    "textlint-rule-preset-japanese": "^4.0.0",
    "textlint-rule-preset-jtf-style": "^2.3.1",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.3",
    "typescript": "3.1.x"
  }
}
