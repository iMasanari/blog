{
  "name": "tech-sandbox",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "npm run clean && npm run copy",
    "build": "npm run build:routes && npm run build:parcel && npm run build:html",
    "build:routes": "ts-node -P tsconfig.ts-node.json --require ignore-styles scripts/build-routes",
    "build:parcel": "parcel build src/index.html --experimental-scope-hoisting",
    "build:html": "ts-node -P tsconfig.ts-node.json --require ignore-styles scripts/build-html",
    "predev": "npm run build:routes",
    "dev": "npm run dev:routes & npm run dev:parcel",
    "dev:routes": "chokidar \"content/**/*.md\" -c \"npm run build:routes\"",
    "dev:parcel": "parcel src/index.html",
    "test": "npm run test:textlint && npm run test:tsc",
    "test:textlint": "textlint ./content",
    "test:tsc": "tsc -p . --noEmit",
    "clean": "rm -rf dist/* build-cache/*",
    "copy": "cp -r ./public/* ./dist",
    "predeploy": "npm run test && npm run build",
    "deploy": "gh-pages -d dist -b master"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "hyperapp": "^1.2.10",
    "nes.css": "^2.3.0"
  },
  "devDependencies": {
    "@hyperapp/render": "^2.1.0",
    "@types/cheerio": "^0.22.18",
    "@types/html-minifier": "^3.5.3",
    "@types/marked": "^0.7.4",
    "@types/mkdirp": "^1.0.0",
    "@types/prismjs": "^1.16.0",
    "cheerio": "^1.0.0-rc.3",
    "chokidar-cli": "^2.1.0",
    "critical": "^1.3.9",
    "gh-pages": "^2.2.0",
    "html-minifier": "^4.0.0",
    "ignore-styles": "^5.0.1",
    "jdown": "^1.0.4",
    "marked": "^1.0.x",
    "mkdirp": "^1.0.4",
    "node-sass": "^4.14.1",
    "parcel-bundler": "^1.12.4",
    "prismjs": "^1.21.0",
    "textlint": "^11.6.3",
    "textlint-rule-preset-japanese": "^4.0.4",
    "textlint-rule-preset-jtf-style": "^2.3.4",
    "ts-node": "^8.10.1",
    "typescript": "3.1.x"
  }
}
